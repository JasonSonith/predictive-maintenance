# Normalize text files to LF in repo
* text=auto eol=lf
# Data/binaries: no EOL conversion
data/** -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.mat  -text
*.npz  -text
*.parquet -text
*.png  -text
*.jpg  -text
*.pdf  -text
# Common text sources
*.py    text eol=lf
*.ipynb text eol=lf
*.md    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.csv   text eol=lf
*.txt   text eol=lf
# Windows-native scripts can keep CRLF
*.ps1   text eol=crlf
*.bat   text eol=crlf
.zip filter=lfs diff=lfs merge=lfs -text
